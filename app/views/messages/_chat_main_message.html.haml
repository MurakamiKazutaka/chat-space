.chat__main__message
  .chat__main__message__box__top
    .chat__main__message__box__top__name
      = message.user.name
    .chat__main__message__box__top__time
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  .chat__main__message__box__text
    - if message.content.present?
      %p.lower-message__content
        = message.content
    = image_tag message.image.url, class: 'chat__main__message__box__text__image' if message.image.present?